{
    "description": "Fractary Repo Plugin Hooks - Auto-commit on session end and update status cache on command submission",
    "hooks": {
      "Stop": [
        {
          "hooks": [
            {
              "type": "command",
              "command": "${CLAUDE_PLUGIN_ROOT}/scripts/auto-commit-on-stop.sh"
            }
          ]
        }
      ],
      "UserPromptSubmit": [
        {
          "hooks": [
            {
              "type": "command",
              "command": "${CLAUDE_PLUGIN_ROOT}/scripts/update-status-cache.sh --quiet"
            }
          ]
        }
      ]
    }
  }
  
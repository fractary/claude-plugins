{
  "description": "Fractary Status Plugin Hooks - Capture user prompts and display status line",
  "hooks": {
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/scripts/capture-prompt.sh"
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "~/.claude/plugins/marketplaces/fractary/plugins/status/scripts/status-line.sh"
  }
}

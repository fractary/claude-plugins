{
  "name": "fractary-spec",
  "version": "1.0.0",
  "description": "Manage ephemeral specifications tied to work items with lifecycle-based archival",
  "author": "Fractary",
  "requires": [
    "fractary-work",
    "fractary-file"
  ],
  "provides": {
    "agents": [
      "spec-manager"
    ],
    "commands": [
      "init",
      "generate",
      "validate",
      "archive",
      "read"
    ],
    "skills": [
      "spec-generator",
      "spec-validator",
      "spec-archiver",
      "spec-linker"
    ]
  },
  "config_file": "config/config.json",
  "integration": {
    "faber": {
      "architect_phase": "generate",
      "evaluate_phase": "validate",
      "release_phase": "archive"
    }
  }
}

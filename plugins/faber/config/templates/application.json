{
  "$schema": "https://fractary.io/schemas/faber-config-v1.json",
  "schema_version": "1.0",
  "project": {
    "name": "{{PROJECT_NAME}}",
    "type": "application",
    "issue_system": "github",
    "source_control": "github"
  },
  "workflow": {
    "version": "2.0",
    "manager_skill": "faber-manager",
    "director_skill": "faber-director"
  },
  "phases": {
    "frame": {
      "enabled": true,
      "steps": [
        {
          "name": "fetch-work",
          "skill": "fractary-work:issue-fetcher"
        },
        {
          "name": "classify",
          "skill": "work-classifier"
        },
        {
          "name": "setup-env",
          "skill": "fractary-repo:branch-manager"
        }
      ],
      "validation": ["work-item-exists", "branch-created"]
    },
    "architect": {
      "enabled": true,
      "steps": [
        {
          "name": "generate-spec",
          "skill": "fractary-spec:spec-generator"
        },
        {
          "name": "design-ui",
          "description": "Design user interface and user experience"
        },
        {
          "name": "design-api",
          "description": "Design API endpoints and data models"
        }
      ],
      "validation": ["spec-created", "ui-design-complete", "api-design-complete"]
    },
    "build": {
      "enabled": true,
      "steps": [
        {
          "name": "implement-backend",
          "description": "Implement backend API and business logic"
        },
        {
          "name": "implement-frontend",
          "description": "Implement frontend UI components"
        },
        {
          "name": "integrate",
          "description": "Integrate frontend with backend"
        },
        {
          "name": "commit",
          "skill": "fractary-repo:commit-creator"
        }
      ],
      "validation": ["backend-complete", "frontend-complete", "integration-complete", "tests-pass"]
    },
    "evaluate": {
      "enabled": true,
      "max_retries": 3,
      "steps": [
        {
          "name": "test-unit",
          "description": "Run unit tests (frontend + backend)"
        },
        {
          "name": "test-integration",
          "description": "Run integration tests"
        },
        {
          "name": "test-e2e",
          "description": "Run end-to-end tests"
        },
        {
          "name": "test-accessibility",
          "description": "Run accessibility tests (WCAG compliance)"
        },
        {
          "name": "review",
          "description": "Code review and UX review"
        }
      ],
      "validation": ["all-tests-pass", "accessibility-pass", "review-approved"]
    },
    "release": {
      "enabled": true,
      "require_approval": true,
      "steps": [
        {
          "name": "build-artifacts",
          "description": "Build production artifacts (bundle, optimize, etc.)"
        },
        {
          "name": "create-pr",
          "skill": "fractary-repo:pr-manager",
          "config": {
            "include_screenshots": true,
            "include_demo_link": true
          }
        },
        {
          "name": "update-docs",
          "skill": "fractary-docs:docs-manager",
          "config": {
            "update_user_guide": true,
            "update_api_docs": true
          }
        }
      ],
      "validation": ["artifacts-built", "pr-created", "ci-pass", "docs-updated"]
    }
  },
  "hooks": {
    "pre_frame": [],
    "post_frame": [],
    "pre_architect": [
      {
        "type": "document",
        "name": "design-system",
        "path": "docs/design/DESIGN_SYSTEM.md",
        "description": "Load design system guidelines"
      },
      {
        "type": "document",
        "name": "api-standards",
        "path": "docs/api/API_STANDARDS.md",
        "description": "Load API design standards"
      }
    ],
    "post_architect": [],
    "pre_build": [
      {
        "type": "document",
        "name": "coding-standards",
        "path": "docs/development/CODING_STANDARDS.md",
        "description": "Load coding standards"
      }
    ],
    "post_build": [],
    "pre_evaluate": [],
    "post_evaluate": [],
    "pre_release": [
      {
        "type": "skill",
        "name": "final-review",
        "skill": "app-review",
        "description": "Final application review (code + UX)"
      }
    ],
    "post_release": []
  },
  "autonomy": {
    "level": "guarded",
    "pause_before_release": true,
    "require_approval_for": ["release"]
  },
  "logging": {
    "use_logs_plugin": true,
    "log_type": "workflow",
    "log_level": "info"
  }
}

{
  "$schema": "https://fractary.io/schemas/faber-config-v1.json",
  "schema_version": "1.0",
  "project": {
    "name": "{{PROJECT_NAME}}",
    "type": "infrastructure",
    "issue_system": "github",
    "source_control": "github"
  },
  "workflow": {
    "version": "2.0",
    "manager_skill": "faber-manager",
    "director_skill": "faber-director"
  },
  "phases": {
    "frame": {
      "enabled": true,
      "steps": [
        {
          "name": "fetch-work",
          "skill": "fractary-work:issue-fetcher"
        },
        {
          "name": "classify",
          "skill": "work-classifier"
        },
        {
          "name": "setup-env",
          "skill": "fractary-repo:branch-manager"
        }
      ],
      "validation": ["work-item-exists", "branch-created"]
    },
    "architect": {
      "enabled": true,
      "steps": [
        {
          "name": "generate-spec",
          "skill": "fractary-spec:spec-generator"
        },
        {
          "name": "design-infrastructure",
          "description": "Design infrastructure architecture (IaC, networking, security)"
        }
      ],
      "validation": ["spec-created", "infrastructure-diagram-created"]
    },
    "build": {
      "enabled": true,
      "steps": [
        {
          "name": "write-iac",
          "description": "Write Infrastructure as Code (Terraform, CloudFormation, etc.)"
        },
        {
          "name": "validate-iac",
          "description": "Validate IaC syntax and best practices"
        },
        {
          "name": "commit",
          "skill": "fractary-repo:commit-creator"
        }
      ],
      "validation": ["iac-valid", "tests-pass"]
    },
    "evaluate": {
      "enabled": true,
      "max_retries": 3,
      "steps": [
        {
          "name": "plan",
          "description": "Generate infrastructure plan (terraform plan, etc.)"
        },
        {
          "name": "cost-estimate",
          "description": "Estimate infrastructure costs"
        },
        {
          "name": "security-scan",
          "description": "Scan for security issues (checkov, tfsec, etc.)"
        },
        {
          "name": "review",
          "description": "Review infrastructure changes"
        }
      ],
      "validation": ["plan-generated", "no-security-issues", "review-approved"]
    },
    "release": {
      "enabled": true,
      "require_approval": true,
      "steps": [
        {
          "name": "create-pr",
          "skill": "fractary-repo:pr-manager",
          "config": {
            "include_plan_output": true,
            "include_cost_estimate": true
          }
        },
        {
          "name": "update-docs",
          "skill": "fractary-docs:docs-manager",
          "config": {
            "update_architecture_docs": true,
            "update_runbooks": true
          }
        }
      ],
      "validation": ["pr-created", "ci-pass", "docs-updated"]
    }
  },
  "hooks": {
    "pre_frame": [],
    "post_frame": [],
    "pre_architect": [
      {
        "type": "document",
        "name": "infrastructure-standards",
        "path": "docs/infrastructure/STANDARDS.md",
        "description": "Load infrastructure standards and patterns"
      }
    ],
    "post_architect": [],
    "pre_build": [
      {
        "type": "document",
        "name": "iac-best-practices",
        "path": "docs/infrastructure/IAC_BEST_PRACTICES.md",
        "description": "Load IaC best practices"
      }
    ],
    "post_build": [],
    "pre_evaluate": [],
    "post_evaluate": [],
    "pre_release": [
      {
        "type": "skill",
        "name": "infrastructure-review",
        "skill": "infra-review",
        "description": "Final infrastructure review before release"
      }
    ],
    "post_release": []
  },
  "autonomy": {
    "level": "guarded",
    "pause_before_release": true,
    "require_approval_for": ["release"]
  },
  "logging": {
    "use_logs_plugin": true,
    "log_type": "workflow",
    "log_level": "info"
  },
  "safety": {
    "protected_paths": [
      "infra/prod/**",
      "terraform/prod/**",
      "*.tfvars",
      "secrets/**"
    ],
    "require_confirm_for": [
      "deploy",
      "apply",
      "destroy",
      "merge_to_main"
    ]
  }
}
